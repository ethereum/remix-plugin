{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom", "es5"],
    "paths": {
      "remix-plugin": ["src/index.ts"],
      "@remixproject/engine": ["./projects/engine/dist"],
      "@remixproject/engine/*": ["./projects/engine/src/*"],
      "@remixproject/engine-web": ["./projects/engine-web/dist"],
      "@remixproject/engine-web/*": ["./projects/engine-web/src/*"],
      "@remixproject/engine-node": ["./projects/engine-node/dist"],
      "@remixproject/engine-node/*": ["./projects/engine-node/src/*"],
      "@remixproject/plugin": ["./projects/client/dist"],
      "@remixproject/plugin/*": ["./projects/client/src/*"],
      "@remixproject/plugin-ws": ["./projects/client-ws"],
      "@remixproject/plugin-iframe": ["./projects/client-iframe"],
      "@remixproject/plugin-child-process": ["./projects/client-child-process"],
      "@utils": ["./projects/utils/src"],
      "@utils/*": ["./projects/utils/src/*"],
      "@examples/*": ["./examples/*"]
    }
  },
  "exclude": ["node_modules", "old"]
}
